<script type="text/javascript">
  $(document).ready(function() {

    $('.disabled').hide();

    $(document).on('click','.inline-search__button', function(e) {
      e.preventDefault();
      $('.js-hide, .disabled').hide();
    });

    $(document).on('click','.js-show-removed', function(e) {
      e.preventDefault();
      if ($(this).val() === 'Show removed') {
        $('.disabled').show();
        $(this).val('Hide removed');
      } else {
        $('.disabled').hide();
        $(this).val('Show removed');
      }
    });
  });

  OLCS.toggleElement({
    triggerSelector: '.more-actions',
    targetSelector: '.more-actions__list'
  });
</script>

