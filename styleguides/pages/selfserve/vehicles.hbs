<script type="text/javascript">
  $(document).ready(function() {

    $('.disabled').hide();

    $(document).on('click','.inline-search__button', function(e) {
      e.preventDefault();
      $('.js-hide, .disabled').hide();
    });

    $(document).on('click','.js-remove', function(e) {
      e.preventDefault();
      $('.js-confirm-modal').show();
    });


    $(document).on('click','.js-show-removed', function(e) {
      e.preventDefault();
      if ($(this).val() === 'Show removed vehicles') {
        $('.disabled').show();
        $(this).val('Hide removed vehicles');
      } else {
        $('.disabled').hide();
        $(this).val('Show removed vehicles');
      }
    });
  });

  OLCS.toggleElement({
    triggerSelector: '.more-actions',
    targetSelector: '.more-actions__list'
  });
</script>

