title: Popup form
---

  <div class="overlay"></div>
  <div class="modal__wrapper">
    <div class="modal">
      <div class="modal__header">
        <h2 class="modal__title">Add subsidiary company</h2>
        <a href="" class="modal__close">Close</a>
      </div>
      <div class="modal__content">
        <div class="notice-container">  
          <div class="notice--success">
            <p>Subsidiary company added successfully<a href="" class="notice__link">Dismiss</a></p>
          </div>
        </div>
        <form action="">
          <fieldset>
            <div class="field">
              <label for="">Company name</label>
              <input type="text" class="long">
            </div>
            <div class="field">
              <label for="">Company number</label>
              <input type="text" class="long">
            </div>
          </fieldset>
          <fieldset class="actions-container">
            <input type="submit" class="action--primary large" value="Save">
            <input type="submit" class="action--primary large" value="Save and add another">
            <input type="submit" class="action--secondary large" value="Cancel">
          </fieldset>
        </form>
      </div><!-- .modal__content -->
    </div><!-- .modal -->
  </div><!-- .modal__wrapper -->

