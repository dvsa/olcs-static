---
title: Search results
header-text: <p>We've found <b>230</b> vehicle operators that match your search</p>
layout: base.hbs
table:
  - headers:
      - label: Operator
        class: sortable descending
      - label: Registered address
        class: sortable descending
      - label: No. of licences
        class: sortable
    columns:
      - <strong><a href="bus-service-detail.html">AB Agri Limited</a></strong>
      - Bishopdyke road, Sherburn in Elmet, Leeds, LS25 6JZ
      - 1
    rows: 20
---

<div class="three-eigths">
  <form class="filters">
    <fieldset>
      <legend>Search</legend>
      <div class="field">
        <label for="search">Keywords</label>
        <input id="search" name="search" type="search" class="extra-long">
        <p class="hint--small">Search by registration or service number.</p>
      </div>
      <div class="field">
        <label>Start point</label>
        <select name="">
          <option value="">Please select</option>
        </select>
      </div>
      <div class="field">
        <label>End point</label>
        <select name="">
          <option value="">Please select</option>
        </select>
      </div>
      <input type="submit" class="action--primary large" value="Update results">
    </fieldset>
  </form>
</div><!-- three-eights -->

<div class="five-eigths">
  <!-- Registered bus services -->
  {{#each table}}
    {{#is @index 0 }}
      {{> _table }}
    {{/is }}
  {{/each}}
  <div class="table__footer" style="margin-top: -30px; float: left;">
    <div class="results-settings">
      <p>Show:</p>
      <ul class="results-settings__list">
        <li class="results-settings__item current">10</li>
        <li class="results-settings__item"><a href="">25</a></li>
        <li class="results-settings__item"><a href="">50</a></li>
      </ul><!-- .results-settings__list -->
      <p>results per page</p>
    </div><!-- .results-settings -->
    <ul class="pagination right-aligned" role="menu">
      <li class="pagination__item"><a href="" rel="previous">Previous</a></li>
      <li class="pagination__item"><a href="">1</a></li>
      <li class="pagination__item"><a href="">2</a></li>
      <li class="pagination__item current">3</li>
      <li class="pagination__item"><a href="">4</a></li>
      <li class="pagination__item"><a href="">5</a></li>
      <li class="pagination__item">...</li>
      <li class="pagination__item"><a href="">14</a></li>
      <li class="pagination__item"><a href="" rel="next">Next</a></li>
    </ul><!-- .pagination.right-aligned -->
  </div><!-- .table__footer -->
</div><!-- .five-eights -->


