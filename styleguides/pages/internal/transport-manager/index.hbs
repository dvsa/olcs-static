---
layout: transport-manager.hbs
sectionTitle: TM details
subSectionTitle: Details
verticalNavItems:
  - label: Details
    link:  index.html
  - label: Responsibilities
    link: responsibilities.html  
  - label: Convictions & penalties
    link: convictions-penalties.html
  - label: Qualifications
    link: qualifications.html
form: 
  - fieldsets:
    - legend:
      fields:
        - label: First name
          type: text
          class: long 
        - label: Last name
          type: text
          class: long 
        - label: Email address
          type: text
          class: extra-long
        - label: Date of birth
          type: date
        - label:  Place of birth
          type: text
          class: long 
  - fieldsets:
    - legend: Home address
      fields:
        - label: Title
          type: full-address
  - fieldsets:
    - legend: Work address
      fields:
        - label: Title
          type: full-address


---

<div class="one-fifth--left">
  <h4>TM details</h4>
  {{> _vertical-navigation }}
</div>

<div class="three-fifths">
  <h3>Details</h3>
  {{#each form }}{{> _forms }}{{/each }}
  {{#each table}}
    {{#is @index 0 }} 
      {{> _table }}
    {{/is }} 
  {{/each}}


  <div class="actions-container">
    <a class="action--primary large" href="">Save</a>
    <a class="action--secondary large" href="">Cancel</a>
  </div>

</div>