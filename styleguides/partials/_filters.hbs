<div class="filters">
  <h4>Filter by</h4>
  {{#each filterList }}
  <div class="filter-group">
    <h5 class="filter-group__title">{{this.header}}</h5>

    {{#is this.type 'checkboxes'}}
      {{#each this.filters }}
      <div class="filter-group__item">
        <label for="f-{{ . }}"><input type="checkbox" name="area" id="f-{{ . }}">{{ . }}</label>
      </div>
      {{/each }}
    {{/is}}

    {{#is this.type 'dropdown'}}
      <select id="{{ . }}" name="">
      {{#each this.filters }}
        <option value="{{ . }}">{{ . }}</option>
      {{/each }}
      </select>
    {{/is}}
    
  </div><!-- end .filter-group -->
  {{/each }}
</div>