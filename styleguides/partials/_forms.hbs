
<form>
  {{#each fieldsets }}
    <fieldset>
      <legend>{{ legend }}</legend>

      {{#each fields }}

          {{#is type "read only" }}
          <div class="field read-only">
            <p>{{ label }}
            {{#each values }}<br />
            <b>{{ this }}</b>
            </p>
            {{/each }}
          </div>
          {{/is}}  

          {{#is type "read only two-col" }}
          <div class="field two-col read-only">
            <p>{{ label }}
            {{#each values }}<br />
            <b>{{ this }}</b>
            </p>
            {{/each }}
          </div>
          {{/is}} 

          {{#is type "read only three-col" }}
          <div class="field three-col read-only">
            <p>{{ label }}
            {{#each values }}<br />
            <b>{{ this }}</b>
            </p>
            {{/each }}
          </div>
          {{/is}} 
          
          {{#is type "select" }}    
          <div class="field">
            <label>{{ label }}</label>
            <select id="{{ this }}" name="{{ this }}"> 
              {{#each values }}
              <option value="{{ this }}">{{ this }}</option>
              {{/each }}
            </select>
          </div>
          {{/is }}

          {{#is type "multi select" }}    
          <div class="field">
            <label>{{ label }}</label>
            <select multiple class="{{ class }}">
              {{#each values }}
              <option value="{{ this }}">{{ this }}</option>
              {{/each }}
            </select>
          </div>
          {{/is }}

          {{#is type "text" }}
          <div class="field">
            <label>{{ label }}</label>
            <input type="text" class="{{ class }}" placeholder="{{#each values }}{{ this }}{{/each }}">
            <p class="hint">{{{ hint }}}</hint>
          </div>  
          {{/is }}

          {{#is type "textarea" }}
          <div class="field">
            <label>{{ label }}</label>
            <textarea class="extra-long" placeholder="{{#each values }}{{ this }}{{/each }}"></textarea>
          </div>  
          {{/is }}

          {{#is type "date" }}
          <fieldset>
            <legend>{{ label }}</legend>
            <div class="field inline">
              <select id="day" name="date-of-birth">
                <option value="Day">Day</option>
              </select>
              <select id="month" name="date-of-birth">
                <option value="Month">Month</option>
              </select>
              <select id="year" name="date-of-birth">
                <option value="Year">Year</option>
              </select>
            </div>
            <p class="hint">{{{ hint }}}</hint>
          </fieldset>
          {{/is }}

          {{#is type "radios inline" }}
          <fieldset>
            <legend class="legend">{{ label }}</legend>
            {{#each values }}
            <div class="field inline">
              <label><input type="radio" name="{{ this }}">{{ this }}</label>
            </div>
            {{/each }}
          </fieldset>
          {{/is }}

          {{#is type "radios" }}
          <fieldset class="{{ type }}">
            <legend class="legend">{{ label }}</legend>
            {{#each values }}
            <div class="field--list">
              <label><input type="radio" name="{{ this }}">{{ this }}</label>
            </div>
            {{/each }}
          </fieldset>
          {{/is }}

          {{#is type "checkboxes" }}
          <fieldset class="{{ type }}">
            <legend class="legend">{{ label }}</legend>
            {{#each values }}
            <div class="field--list">
              <label for=""><input type="checkbox" id="{{ this }}">{{ this }}</label>
            </div>
            {{/each }}
          </fieldset>
          {{/is }}

          {{#is type "checkboxes two-col" }}
          <fieldset class="{{ type }}">
            <legend class="legend">{{ label }}</legend>
            {{#each values }}
            <div class="field--two-col">
              <label for=""><input type="checkbox" id="{{ this }}">{{ this }}</label>
            </div>
            {{/each }}
          </fieldset>
          {{/is }}

          {{#is type "multiple" }}
          <fieldset class="multiple">
            <legend>{{ label }}</legend>
            <div class="field">
              <label for="" class="visually-hidden"></label>
              <input id="" name="" type="text" class="{{ class }}">
            </div>
            <a class="" href="" >Add another</a>
          </fieldset>
          {{/is }}

          {{#is type "address" }}
          <fieldset class="postcode-search">
            <legend>Postcode</legend>
            <div class="field inline">
              <label for="postcode-search" class="visually-hidden">Postcode search</label>
                  <input id="postcode-search" name="postcode" type="text" class="short">
            </div>
            <div class="field inline">
              <input class="action--secondary large" type="submit" value="Find address">
            </div>
            <p class="hint"><a href="">Enter address manually</a></p>
          </fieldset>
        
          {{/is }}


          {{#is type "registered-address" }}
          <div class="field">
            <label for="street-line-one" class="visually-hidden">Street</label>
            <input id="street-line-one" name="address" type="text" class="long">
          </div>
          <div class="field">
            <label for="street-line-two" class="visually-hidden">Street line 2</label>
              <input id="street-line-two" name="address" type="text" class="long">
          </div>
          <div class="field">
            <label for="street-line-three" class="visually-hidden">Street line 3</label>
              <input id="street-line-three" name="address" type="text" class="long">
          </div>
          <div class="field">
            <label for="street-line-four" class="visually-hidden">Street line 4</label>
              <input id="street-line-four" name="address" type="text" class="long">
          </div>
            <div class="field">
              <label for="postcode">Postcode</label>
              <input id="postcode" name="postcode" type="text" class="short">
            </div>
          {{/is }}


          {{#is type "inline-search" }}
          <fieldset class="inline-search">
            <legend>{{ label }}</legend>
            <div class="field inline">
              <label for="{{ label }}" class="visually-hidden">{{ label }}</label>
              <input id="{{ label }}" name="{{ label }}" type="text" class="{{ label }}">
            </div>
            <div class="field inline">
              <input class="action--secondary large" type="submit" value="{{#each values }}{{ this }}{{/each }}">
            </div>
            <p class="hint">{{ hint }}</p>
          </fieldset>
          {{/is }}


      {{/each }}

    </fieldset>
  {{/each }}

  {{#if actions }}{{> _actions}}{{/if }}

</form>

