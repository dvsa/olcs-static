                <li class="proposition-nav__item"><a href="/styleguides/selfserve/authentication-prototype/update-details/my-account.html">My account</a></li>
              {{/is }}
              {{#is user "local authority" }}
                <li class="proposition-nav__item"><a href="/styleguides/selfserve/search/index.html">Search</a></li>
