                <li class="proposition-nav__item"><a href="/styleguides/selfserve/authentication-prototype/update-details/my-account.html">My account</a></li>
              {{/is }}
            {{else}}
                <li class="proposition-nav__item"><a href="/styleguides/selfserve/search/index.html">Search</a></li>
            {{/if }}
          </ul>
        </div>
      </div><!-- end .global-header__wrapper -->
    </div><!-- end .global-header -->

    <div class="page-wrapper">
      <div class="user-header">
        <p class="phase">
          <span class="phase__tag">alpha</span><span class="phase__message">This is a new service â€“ <a href="https://www.surveymonkey.com/s/T8NGJV8">help us improve it.</a></span>
