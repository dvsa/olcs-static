  <body class="selfserve js-enabled">

    <div role="banner" class="global-header">
      <div class="global-header__wrapper">
        <a href="/styleguides/selfserve/" title="Go to the OLCS Selfserve styleguide homepage" class="global-header__logo">
          <img src="/images/gov.uk_logotype_crown.png" alt="GOV.UK logo">GOV.UK
        </a>
        <div class="proposition">
          <h2 class="proposition__title">Vehicle Operator Licensing</h2>
          <ul class="proposition-nav">
            {{#is user "operator" }}
              <li class="proposition-nav__item"><a href="licences.html">Licences</a></li>
              <li class="proposition-nav__item"><a href="">Manage users</a></li>
              <li class="proposition-nav__item"><a href="">My account</a></li>
            {{/is }}
            {{#is user "bus operator" }}
              <li class="proposition-nav__item"><a href="licences.html">Licences</a></li>
              <li class="proposition-nav__item"><a href="bus-services.html">Bus registrations</a></li>
              <li class="proposition-nav__item"><a href="">My account</a></li>
            {{/is }}
            <li class="proposition-nav__item"><a href="search.html">Search</a></li>
          </ul>
        </div>
      </div><!-- end .global-header__wrapper -->
    </div><!-- end .global-header -->
    
    <div class="page-wrapper">
      <div class="user-header">
        <p class="phase">
          <span class="phase__tag">alpha</span><span class="phase__message">This is a new service â€“ <a href="">help us improve it.</a></span>
        </p> 
        <ul class="user-menu">
        {{#if user}}
          {{#is user "operator"}}
          <li class="user-menu__item">Katy Hasley, <b>Operator Halauge Ltd.</b></li>
          <li class="user-menu__item"><a href="">Sign out</a></li>
          {{/is}}
          {{#is user "bus operator"}}
          <li class="user-menu__item">Ruben Loftus-Cheek, <b>Operator Coaches Ltd.</b></li>
          <li class="user-menu__item"><a href="">Sign out</a></li>
          {{/is}}
        {{else}}
          <li class="user-menu__item"><a href="">Sign in</a></li>
        {{/if}}
        </ul>
      </div><!-- end .user-header -->

      <div id="main" role="main" class="styleguide">
        <div class="page-header">
          <ol class="breadcrumbs">
            {{#each breadcrumbs }}
              <li class="breadcrumbs__item"><a href="{{ link }}">{{ label }}</a></li>
            {{/each}}
          </ol>
          <div class="page-header__wrapper">
            {{#if subtitle }}<h3 class="page-header__subtitle">{{ subtitle }}</h3>{{/if}}
            <h1>{{ title }}</h1>
            {{#if header-text }}<div class="page-header__text">{{{ header-text }}}</div>{{/if}}  
            <ul class="page-header__actions">
              {{#each page-actions }}
              <li><a href="" class="page-header__action">{{ this }}</a></li>
              {{/each}}
            </ul>
          </div><!-- .page-header__wrapper -->    
        </div><!-- .page-header -->

        {{> body }}

      </div><!-- end .main -->
    </div><!-- end .page-wrapper-->

    <div class="global-footer">
      <div class="global-footer__wrapper">
        <ul class="global-footer__links">
          <li class="global-footer__link"><a href="">Helpdesk</a></li>
          <li class="global-footer__link"><a href="">Privacy &amp; cookies</a></li>
