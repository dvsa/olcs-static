        <ul class="user-menu">
        {{#if user}}
          {{#is user "operator"}}
          <li class="user-menu__item">Katy Hasley, <b>Operator Licensing Ltd.</b></li>
          <li class="user-menu__item"><a href="/styleguides/selfserve/authentication/index.html">Sign out</a></li>
          {{/is}}
          {{#is user "bus operator"}}
          <li class="user-menu__item">Ruben Loftus-Cheek, <b>Operator Licensing Ltd.</b></li>
